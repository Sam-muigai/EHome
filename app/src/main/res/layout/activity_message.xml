<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MessageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fill the folllowing client form"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/Primary_color"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/service"
        android:hint="Type of service"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Accent_color"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawablePadding="10dp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:hint="Location"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="10dp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/street"
        android:hint="Street name"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_add_road_24"
        android:drawablePadding="10dp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:hint="Phone no."
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_smartphone_24"
        android:drawablePadding="10dp"
        android:inputType="number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/identity"
        android:hint="Identity no."
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:drawablePadding="10dp"
        android:inputType="number" />

    <Spinner
        android:id="@+id/spinnerPayment_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:drawablePadding="10dp"
        android:spinnerMode="dialog"
        android:textSize="20dp"
        android:textStyle="bold"
        android:entries="@array/Payment_mode"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/send"
        android:text="Send"
        android:textSize="20dp"
        android:backgroundTint="@color/Primary_color"
        android:textColor="@color/Text"/>
</LinearLayout>