<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServproviderActivity">

    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:text="Register here as a service man"
        android:textSize="35dp"
        android:textColor="@color/Dark_primary_color"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstname"
        android:hint="Firstname"
        android:layout_below="@id/register"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_add_24"
        android:drawablePadding="10dp"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastname"
        android:hint="Lastname"
        android:layout_below="@id/firstname"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_add_24"
        android:drawablePadding="10dp"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/lastname"
        android:hint="Email"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sOffer"
        android:hint="Service offering"
        android:layout_below="@id/email"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_handyman_24"
        android:drawablePadding="10dp"
        android:inputType="text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/certif"
        android:hint="Certificant Number"
        android:layout_below="@id/sOffer"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_certificate_24"
        android:drawablePadding="10dp"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/identity"
        android:hint="Identiy No."
        android:layout_below="@id/certif"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:drawablePadding="10dp"
        android:inputType="phone"
        android:maxLength="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:hint="Mobile No."
        android:layout_below="@id/identity"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_smartphone_24"
        android:drawablePadding="10dp"
        android:inputType="phone"
        android:maxLength="10"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:hint="Location"
        android:layout_below="@id/mobile"
        android:textColorHint="@color/Primary_text"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_margin="1dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="10dp"
        android:inputType="text"/>

            <TableRow
                android:layout_gravity="center"
                android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnter"
            android:layout_below="@id/location"
            android:layout_marginTop="20dp"
            android:text="Enter"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/Text"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:backgroundTint="@color/Primary_color"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp" />

            </TableRow>



    </TableLayout>

    </ScrollView>

</LinearLayout>