<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:stretchColumns="1">

    <ScrollView android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What you want ?"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="10dp"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:fontFamily="monospace"/>

    <TableRow>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/electrician"
            android:padding="0dip" />
        <TextView
            android:text="Electrician"
            android:gravity="right"
            android:padding="3dp"
            android:id="@+id/txtelectrician"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/Primary_text"
            android:textSize="25dp"/>



    </TableRow>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hireelect"
        android:layout_below="@id/txtelectrician"
        android:text="Hire"
        android:textStyle="bold"
        android:textColor="@color/Primary_text"
        android:backgroundTint="@color/Dark_primary_color"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="20dp"
        />

        <View style="@style/Divider"/>

    <TableRow>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/plumber2"
            android:padding="0dip" />
        <TextView
            android:text="Plumber"
            android:gravity="right"
            android:padding="3dp"
            android:id="@+id/txtPlumber"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/Primary_text"
            android:textSize="25dp"/>



    </TableRow>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hireplumber"
        android:layout_below="@id/txtPlumber"
        android:text="Hire"
        android:textColor="@color/Primary_text"
        android:textStyle="bold"
        android:backgroundTint="@color/Dark_primary_color"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="230dp"
        android:layout_marginRight="20dp" />

        <View style="@style/Divider"/>

    <TableRow>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/painter2"
            android:padding="0dip" />
        <TextView
