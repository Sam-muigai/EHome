            android:padding="3dp"
            android:id="@+id/txtpainter"
            android:layout_marginTop="80dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textColor="@color/Primary_text"
            android:textSize="25dp"/>



    </TableRow>

