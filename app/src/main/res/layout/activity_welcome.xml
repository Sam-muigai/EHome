<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".WelcomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Home Service Providers' app"
        android:textSize="30dp"
        android:padding="20dp"
        android:textColor="@color/Primary_text"
        android:gravity="center"/>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as a \nservice provider"
        android:layout_marginLeft="4dp"
        android:textColor="@color/Dark_primary_color"
        android:textSize="20dp"
        android:drawableBottom="@drawable/ic_baseline_south_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View our \nservices"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/Dark_primary_color"
                android:drawableBottom="@drawable/ic_baseline_south_24"/>




        </TableRow>

        <TableRow>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Here"
            android:layout_marginLeft="4dp"
            android:backgroundTint="@color/Accent_color"
            android:textColor="@color/Text"
            android:id="@+id/servicemanbtn"/>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Click here"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/Primary_color"
                android:textColor="@color/Text"
                android:id="@+id/servicebtn"/>

        </TableRow>
    </TableLayout>

</LinearLayout>